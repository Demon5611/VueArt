{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "allowSyntheticDefaultImports": true,   
    "esModuleInterop": true,                
    "skipLibCheck": true,                 
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "node"],       
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "vite.config.ts"                       
  ]
}
